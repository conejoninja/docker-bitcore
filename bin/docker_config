#!/bin/bash

set -ex

# This shouldn't be in the Dockerfile or containers built from the same image
# will have the same credentials.

DOCKERPASS=$(dd if=/dev/urandom bs=33 count=1 status=none | base64)

if [ ! -e "$HOME/.bitcoin/bitcoin.conf" ]; then
    mkdir -p $HOME/.bitcoin

    echo "Creating $HOME/.bitcoin/bitcoin.conf"

    # Seed a random password for JSON RPC server
    cat <<EOF > $HOME/.bitcoin/bitcoin.conf
disablewallet=1
printtoconsole=1
rpcuser=bitcoinrpc
rpcpassword=$DOCKERPASS

server=1
rpcallowip=127.0.0.0/24
rpcport=8332
EOF

fi

cat $HOME/.bitcoin/bitcoin.conf

mkdir -p $HOME/.bitcoin/bitcore

if [ ! -e "$HOME/.bitcoin/bitcore/docker.yml" ]; then

    echo "Creating $HOME/.bitcoin/bitcore/docker.yml"

    cat <<EOF > $HOME/.bitcoin/bitcore/docker.yml
BitcoreHTTP:
  port: 80
  logging: true
  BitcoreNode:
    LevelUp: $HOME/.bitcoin/bitcore/db
    network: livenet
    NetworkMonitor:
      host: localhost
      port: 8333
    RPC:
      user: bitcoinrpc
      pass: $DOCKERPASS
      protocol: http
      host: 127.0.0.1
      port: 8332
EOF

fi

mkdir -p /opt/bitcore-node/config
ln -sf  $HOME/.bitcoin/bitcore/docker.yml /opt/bitcore-node/config/docker.yml
cat /opt/bitcore-node/config/docker.yml


echo "Initialization completed successfully"